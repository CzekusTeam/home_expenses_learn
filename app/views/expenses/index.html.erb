<table class="table table-striped table-hover table-sm">
  <thead class="thead-dark">
  <tr>
    <th>Amount</th>
    <th>Category</th>
    <th>Description</th>
    <th>Date</th>
  </tr>
  </thead>
  <tbody>
  <% @expenses.each do |e| %>
    <tr>
      <td scope="row"><%= e.amount %></td>
      <td><%= e.category.name %></td>
      <td><%= e.description %></td>
      <td><%= e.period&.name %></td>
    </tr>
  <% end %>

  </tbody>
</table>

